<Window x:Class="BDKR.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BDKR"
        mc:Ignorable="d"
        Title="MainWindow" Height="512" Width="1359">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="1358*"/>
        </Grid.ColumnDefinitions>
        <TabControl x:Name="MainTabContol" Grid.ColumnSpan="2">
            <TabItem Name="BuyerInfo">
                <TabItem.Header >
                    <TextBlock Text="Информация о покупателях" FontSize="20"/>
                </TabItem.Header>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="10*"/>
                        <RowDefinition Height="1*"/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0">
                        <TextBlock x:Name="BuyerLabel" Text="Список покупателей"  FontSize="20"/>
                    </Grid>
                    <Grid Grid.Row="1">
                        <DataGrid x:Name="BuyerGrid" AutoGenerateColumns="False" 
                                  IsReadOnly="True" 
                                  ScrollViewer.VerticalScrollBarVisibility="Visible" 
                                  ScrollViewer.HorizontalScrollBarVisibility="Visible"
                                  MouseDoubleClick="BuyerGrid_MouseDoubleClick"  FontSize="20"
                                  Margin="0,0,0,5">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Id покупателя"
                                                    Width="Auto" 
                                                    Binding="{Binding BuyerId}"/>
                                <DataGridTextColumn Header="Серия паспорта" Width="Auto" Binding="{Binding Passport.Serial}"/>
                                <DataGridTextColumn Header="Номер паспорта" Width="Auto" Binding="{Binding Passport.Number}"/>
                                <DataGridTextColumn Header="Фамилия" Width="Auto" Binding="{Binding Surname}"/>
                                <DataGridTextColumn Header="Имя" Width="Auto" Binding="{Binding Name}"/>
                                <DataGridTextColumn Header="Отчество" Width="Auto" Binding="{Binding MiddleName}"/>
                                <DataGridTextColumn Header="Дата рождения" Width="Auto" Binding="{Binding Birthday}"/>
                                <DataGridTextColumn Header="Номер телефона" Width="Auto" Binding="{Binding PhoneNumber}"/>
                                <DataGridTextColumn Header="Номер карты" Width="Auto" Binding="{Binding CardNumber}"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                    <Grid Grid.Row="2">
                        <Button x:Name="AddBuyerBtn" Content="Добавить покупателя" Width="Auto" HorizontalAlignment="Left" Click="AddBuyerBtn_Click"  FontSize="20" Height="38" VerticalAlignment="Top"/>
                        <Button x:Name="UpdateBuyerGrid" Content="Обновить таблицу" Width="Auto" HorizontalAlignment="Center" FontSize="20" Click="UpdateBuyerGrid_Click"/>
                    </Grid>
                </Grid>
            </TabItem>
            <TabItem x:Name="EmployeeInfo">
                <TabItem.Header>
                    <TextBlock Text="Информация о сотрудниках" FontSize="20"/>
                </TabItem.Header>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="10*"/>
                        <RowDefinition Height="1*"/>
                    </Grid.RowDefinitions>

                    <Label Content="Список сотрудников" FontSize="20"/>

                    <DataGrid x:Name="EmlpoyeeDataGrid"  AutoGenerateColumns="False" 
                                  IsReadOnly="True" 
                                  ScrollViewer.VerticalScrollBarVisibility="Visible" 
                                  ScrollViewer.HorizontalScrollBarVisibility="Visible"
                                  MouseDoubleClick="EmlpoyeeDataGrid_MouseDoubleClick"  FontSize="20" Margin="0,38,0,5" Grid.RowSpan="2">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Место работы" 
                                                Width="Auto" 
                                                Binding="{Binding Post.Company.Adress}"/>
                            <DataGridTextColumn Header="Должность" Width="Auto" Binding="{Binding Post.PostName}"/>
                            <DataGridTextColumn Header="Фамилия" Width="Auto" Binding="{Binding Surname}"/>
                            <DataGridTextColumn Header="Имя" Width="Auto" Binding="{Binding Name}"/>
                            <DataGridTextColumn Header="Отчество" Width="Auto" Binding="{Binding MiddleName}"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <Button x:Name="AddEmployee" Grid.Row="2" Content="Добавить сотрудника" Width="Auto" HorizontalAlignment="Left" FontSize="20" Click="AddEmployee_Click"/>
                    <Button x:Name="DeleteEmployee" Grid.Row="2" Content="Удалить сотрудника" Width="Auto" HorizontalAlignment="Right" FontSize="20" Click="DeleteEmployee_Click"/>
                    <Button Grid.Row="2" x:Name="UpdateEmployeeGrid" Content="Обновить таблицу" Width="Auto" HorizontalAlignment="Center" FontSize="20" Click="UpdateEmployeeGrid_Click"/>
                </Grid>
            </TabItem>
            <TabItem Name="OrderSypplyInfo">
                <TabItem.Header >
                    <TextBlock Text="Информация о заказах и поставках" FontSize="20">
                    </TextBlock>
                </TabItem.Header>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="10*"/>
                        <RowDefinition Height="1*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock 
                        Text="Таблица заказов" 
                        FontSize="20"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"/>
                    <TextBlock
                        Grid.Row="0"
                        Grid.Column="1"
                        Text="Таблица поставок"
                        FontSize="20"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Left"/>

                    <Grid Grid.Row="1">
                        <DataGrid FontSize="20" 
                                  x:Name="OrderDataGrid"
                                  AutoGenerateColumns="False" 
                                  IsReadOnly="True"
                                  MouseDoubleClick="OrderDataGrid_MouseDoubleClick_1"
                                  Margin="0,0,5,5">
                            <DataGrid.Columns >
                                <DataGridTextColumn Header="Фамилия"
                                                    Width="Auto"
                                                    Binding="{Binding Buyer.Surname}"
                                                    />
                                <DataGridTextColumn Header="Имя"
                                                    Width="Auto"
                                                    Binding="{Binding Buyer.Name}"/>
                                <DataGridTextColumn Header="Отчество"
                                                    Width="Auto"
                                                    Binding="{Binding Buyer.MiddleName}"/>
                                <DataGridTextColumn Header="Код заказа"
                                                    Width="Auto"
                                                    Binding="{Binding OrderId}"/>
                                <DataGridTextColumn Header="Полная стоимость заказа"
                                                    Width="Auto"
                                                    Binding="{Binding OrderCost}"/>
                                <DataGridTextColumn Header="Скидка %"
                                                    Binding="{Binding Discount}"
                                                    Width="Auto"/>
                                <DataGridTextColumn Header="Конечная стоимость"
                                                    Width="Auto"
                                                    Binding="{Binding CostWitchDiscond}"/>
                                <DataGridTextColumn Header="Дата заказа"
                                                    Width="Auto"
                                                    Binding="{Binding DataOfOrder}"/>

                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                    <Button
                        x:Name="CreateOrderBt"
                        Grid.Row="2"
                        Content="Оформить заказ"
                        HorizontalAlignment="Left"
                        FontSize="20"
                        Click="CreateOrderBt_Click"/>

                    <Button Grid.Row="2" 
                            x:Name="UpdateOrderAndSypplyGrid" 
                            Content="Обновить таблицы" 
                            Width="Auto" 
                            Grid.ColumnSpan="2"
                            HorizontalAlignment="Center"
                            FontSize="20" 
                            Click="UpdateOrderAndSypplyGrid_Click"/>

                    <Button Grid.Row="2"
                            Grid.Column="1"
                            x:Name="CreateSypplyBt"
                            Content="Оформить поставку"
                            Width="Auto"
                            HorizontalAlignment="Right"
                            FontSize="20"
                            Click="CreateSypplyBt_Click"/>

                    <Grid Grid.Row="1" Grid.Column="1">
                        <DataGrid 
                            x:Name="SypplyDataGrid"
                            FontSize="20"
                            AutoGenerateColumns="False"
                            IsReadOnly="True"
                            VerticalScrollBarVisibility="Visible"
                            Margin="5,0,0,5"
                            MouseDoubleClick="SypplyDataGrid_MouseDoubleClick">
                            
                            <DataGrid.Columns>
                                <DataGridTextColumn
                                    Header="Место работы"
                                    Width="Auto"
                                    Binding="{Binding Employee.Post.Company.Adress}"/>
                                <DataGridTextColumn
                                    Header="Фамилия"
                                    Width="Auto"
                                    Binding="{Binding Employee.Surname}"/>
                                <DataGridTextColumn
                                    Header="Имя"
                                    Width="Auto"
                                    Binding="{Binding Employee.Name}"/>
                                <DataGridTextColumn
                                    Header="Отчество"
                                    Width="Auto"
                                    Binding="{Binding Employee.MiddleName}"/>
                                <DataGridTextColumn
                                    Header="Код поставки"
                                    Width="Auto"
                                    Binding="{Binding SypplyId}"/>
                                <DataGridTextColumn
                                    Header="Дата поставки"
                                    Width="Auto"
                                    Binding="{Binding DateSypply}"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </Grid>
            </TabItem>
            <TabItem Name="Query">
                <TabItem.Header >
                    <TextBlock Text="Отчеты"  FontSize="20">

                    </TextBlock>
                </TabItem.Header>
            </TabItem>
        </TabControl>
